{
  "compilerOptions": {
    /* Options de base */
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Options de sortie */
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,

    /* Options sp√©cifiques pour Node.js */
    "moduleResolution": "node"
  },
  "include": ["server.ts"],
  "exclude": ["node_modules", "src"]
}